<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "https://www.eclipse.org/jetty/configure_10_0.dtd">

<Configure id="wac" class="org.eclipse.jetty.webapp.WebAppContext">
  <Set name="contextPath">/laptops</Set>
  <Set name="war">/home/cloud_user/jetty/webapps/laptops.war</Set>
  <New class="org.eclipse.jetty.plus.jndi.Resource">
    <Arg><Ref refid="wac"/></Arg>
    <Arg>jdbc/rssDS</Arg>
     <Arg>
        <Call class="oracle.ucp.jdbc.PoolDataSourceFactory" name="getPoolDataSource" >
           <Set name="URL">jdbc:oracle:thin:@ils-db-prod.library.ucla.edu:1521:VGER</Set>
           <Set name="user">ucla_preaddb</Set>
           <Set name="password">ucla_preaddb_pwd</Set>
           <Set name="minPoolSize">10</Set>
           <Set name="maxPoolSize">100</Set>
           <Set name="initialPoolSize">2</Set>
           <Set name="connectionFactoryClassName">oracle.jdbc.replay.OracleDataSourceImpl</Set>
        </Call>
     </Arg>
  </New>
</Configure>